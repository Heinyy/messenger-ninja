{
  "name": "messenger-ninja",
  "version": "1.0.0",
  "description": "Messenger Desktop Ninja Mode - Facebook réduit à Messenger uniquement",
  "main": "main.js",
  "author": "Cedric Leblanc",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build:linux": "electron-builder --linux AppImage",
    "build:win": "electron-builder --win nsis",
    "build:all": "electron-builder --win nsis --linux AppImage"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.messengerninja.app",
    "productName": "Messenger Ninja",
    "files": [
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Network"
    }
  }
}

